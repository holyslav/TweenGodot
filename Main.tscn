	float central_priority = 1.0 + front_priority;
	sum += texture(TEXTURE, UV).rgb * central_priority;
	sum += texture(TEXTURE, UV + SCREEN_PIXEL_SIZE * vec2(1,0)).rgb;
	sum += texture(TEXTURE, UV + SCREEN_PIXEL_SIZE * vec2(-1,0)).rgb;
	sum += texture(TEXTURE, UV + SCREEN_PIXEL_SIZE * vec2(0,1)).rgb;
	sum += texture(TEXTURE, UV + SCREEN_PIXEL_SIZE * vec2(0,-1)).rgb;

	COLOR.rgb = (sum / (4.0 + central_priority * 1.1 + blur_damping));
	COLOR.a = 1.0;
}"

